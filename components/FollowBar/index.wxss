.follow_bar {
  width: 100%;
  height: 316rpx;
  overflow: hidden;
}
.follow_bar .box {
  width: 100%;
  height: 316rpx;
  background-color: #fff;
  overflow-x: scroll;
  padding: 0 0 40rpx;
}
.follow_bar .follow_box {
  display: flex;
  justify-content: flex-start;
  height: 316rpx;
}
.follow_bar .follow_box .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.follow_bar .follow_box .item .ava .ava_image {
  width: 123rpx;
  height: 123rpx;
  border-radius: 50%;
}
.follow_bar .follow_box .item .nickname {
  margin: 20rpx 0;
  font-size: 30rpx;
  width: 180rpx;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: wrap;
  word-break: break-all;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-align: center;
}
.follow_bar .follow_box .item .follow {
  width: 124rpx;
  height: 50rpx;
  border: 1px solid #ffa400;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #ffa400;
}
