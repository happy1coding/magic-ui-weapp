.about {
  width: 100%;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.about .logo {
  margin: 0rpx auto 40rpx;
  width: 503rpx;
  height: 180rpx;
  display: block;
}
.about .version {
  text-align: center;
  font-size: 40rpx;
  color: #606266;
}
.about .title {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.about .patch {
  color: red;
  background-color: #eeeeee;
}
.about .des {
  color: grey;
  margin-bottom: 40rpx;
}
.about .subtitle {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
